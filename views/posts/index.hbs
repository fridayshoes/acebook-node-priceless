<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}

  <li>{{this.message}}<br>{{this.date}}</li>
    <form action="/posts/delete" method="post" class="delete" >
      <input name="_id" type="hidden" value="{{this._id}}">
      <input name="delete" type="submit" value ="🗑️">
    </form>
  </li>

  <div>
    <button id="dislike-button">
      Dislike
      {{!-- <i class="fas fa-thumbs-up fa-2x"></i> --}}
    </button>
    <span id="dislike-counter">0</span>
  </div>

  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>
